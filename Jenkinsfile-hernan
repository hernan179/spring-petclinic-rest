pipeline {
    agent any

    stages {
        stage('Build'){
            steps {
                echo 'Checkout git project...';
                git 'https://github.com/hernan179/spring-petclinic-rest.git'
                 sh 'mvn install -DskipTests -B -ntp'
            }
        }
        stage('Testing'){
            steps {
                echo 'Testing';
            }

        }
        stage('Sonar'){
            steps {
                echo 'Qualiting';
            }
        }
        stage('Artifactory'){
            steps {
                echo 'Artifactory...saving';
            }
        }
        stage('Deploy'){
            steps {
                echo 'Deploying... on jboss';
            }
        }
    }
}
